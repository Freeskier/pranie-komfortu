---
import { Image } from "astro:assets";
import logo from "/src/assets/logo.svg";
import smallBubbles from "/src/assets/bubbles-small.svg";
import { Icon } from "astro-icon/components";

const currentPath = Astro.url.pathname;
---

<script>
	hideLogo();

	const toggleButton = document.querySelector(".menu-toggle") as HTMLElement;
	toggleButton.addEventListener("click", () => {
		const nav = document.querySelector("nav") as HTMLElement;
		nav.classList.toggle("open");
	});

	document.addEventListener("scroll", () => {
		hideLogo();
	});

	function hideLogo() {
		const nav = document.querySelector("nav") as HTMLElement;

		if (window.scrollY > 10) {
			nav.classList.add("scrolled");
		} else {
			nav.classList.remove("scrolled");
		}
	}
</script>

<nav>
	<Image src={smallBubbles} alt={"bubbles"} class={"smallBubbles"} />
	<Image src={logo} alt={"Logo Pranie Komfortu"} class={"logo"} />
	<div class="nav-wrapper">
		<ul class="links">
			<li>
				<a href="/" aria-current={currentPath === "/" ? "page" : undefined}>Strona główna</a>
			</li>
			<li>
				<a href="/inprogress" aria-current={currentPath === "/about" ? "page" : undefined}>
					Cennik
				</a>
			</li>
			<li>
				<a href="/inprogress" aria-current={currentPath === "/about" ? "page" : undefined}>
					Galeria
				</a>
			</li>
		</ul>

		<ul class="links">
			<li>
				<a href="https://www.facebook.com/PranieKomfortu/" class="social">
					<Icon name="mdi:instagram" size={32} />
				</a>
			</li>
			<li>
				<a href="https://www.facebook.com/PranieKomfortu/" class="social">
					<Icon name="mdi:facebook" size={32} />
				</a>
			</li>
			<li>
				<a href="/" class="highlight"><Icon name="tabler:phone" size={32} />Skontaktuj się</a>
			</li>
		</ul>
	</div>
	<button class="menu-toggle">
		<Icon class="icon-menu-open" name={"mdi:menu"} size={48} />
		<Icon class="icon-menu-close" name={"mdi:close"} size={48} />
	</button>
</nav>

<style>
	nav {
		position: fixed;
		height: 70px;
		width: 100%;
		background: white;
		z-index: 100;

		.menu-toggle {
			display: none;
		}

		.nav-wrapper {
			height: 100%;
			display: grid;
			grid-template-columns: 1fr 1fr;
			transition: all 0.25s ease-in-out;

			.links {
				display: flex;
				flex-direction: row;
				list-style: none;
				gap: 2rem;
				align-items: center;
				justify-content: center;

				& a {
					text-decoration: none;
					font-weight: 600;
					color: #09152a;
					position: relative;

					&.highlight {
						color: white;
						background-color: #19a0b5;
						display: flex;
						align-items: center;
						justify-content: center;
						gap: 0.5rem;
						padding: 0.25rem 0.75rem;
						border-radius: 0.5rem;
					}

					&.social {
						color: #19a0b5;
					}

					&::before {
						content: "";
						width: 0;
						height: 4px;
						background-color: #f3bc34;
						opacity: 0;
						transition:
							opacity 0.2s ease-in,
							width 0.2s ease-in;
						position: absolute;
						bottom: -6px;
						z-index: 10;
						translate: 10% 0;
					}

					&:hover::before {
						width: 80%;
						opacity: 1;
					}

					&[aria-current="page"]::before {
						width: 100%;
						translate: 0;
						opacity: 1;
					}
					&[aria-current="page"] {
						color: #19a0b5;
					}
				}
			}
		}

		.logo {
			position: absolute;
			left: 50%;
			translate: -50% 0;
			top: 1rem;
			transition: all 0.5s ease-in-out;
			z-index: 2;
		}

		.smallBubbles {
			position: absolute;
			left: 50%;
			translate: -50% 0;
			top: 2rem;
			transition: all 0.5s ease-in-out;
			z-index: -1;
		}
	}

	nav.scrolled {
		.logo {
			top: 5px;
			height: 60px;
		}

		.smallBubbles {
			top: -11rem;
			width: 50%;
		}
	}

	@media (max-width: 1000px) {
		nav {
			display: flex;
			align-items: center;
			justify-content: flex-end;

			.menu-toggle {
				display: flex;
				margin-right: 2rem;
				background-color: transparent;
				border: none;
				padding: 0;
				color: #09152a;
			}

			.nav-wrapper {
				display: flex;
				flex-direction: column;
				align-items: center;
				justify-content: center;
				position: fixed;
				left: 100%;
				width: 100%;
				top: 70px;
				bottom: 0;
				z-index: 1;
			}

			.icon-menu-open {
				display: initial;
			}

			.icon-menu-close {
				display: none;
			}

			&.open .icon-menu-open {
				display: none;
			}

			&.open .icon-menu-close {
				display: initial;
			}

			.logo {
				width: 10rem;
				top: -1rem;
			}

			.smallBubbles {
				width: 15rem;
				top: 0rem;
			}

			&.open .logo {
				top: 5px;
				height: auto;
			}

			&.open .links {
				display: flex;
				flex-direction: column;
				gap: 1rem;
				font-size: 1.5rem;
			}

			&.open .nav-wrapper {
				left: 0;
				gap: 2rem;
				background-color: white;
			}
		}
	}
</style>
