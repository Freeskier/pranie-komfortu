---
import { Image } from 'astro:assets';
import mainBackground from '/src/assets/main.jpeg'
import underline from '/src/assets/underline.svg'
---

<section>
  <Image src={mainBackground} alt="Background" class="background" />
  <div class="heading">
    <h1>Pranie Komfortu</h1>
    <Image src={underline} alt="Pranie Komfortu logo" />
  </div>
    <h2>Odśwież swoje otoczenie z Praniem Komfortu!</h2>
</section>

<style>
  section {
      height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      position: relative;
      color: white;

      &::before {
          content: "";
          position: absolute;
          inset: 0;
          background: radial-gradient(rgba(0, 0, 0, 0.1) 40%, rgba(0, 0, 0, 0.8));
          z-index: -1;
      }
      
      .background {
          position: absolute;
          inset: 0;
          filter: brightness(40%) contrast(90%);
          width: 100%;
          height: 100%;
          object-fit: cover;
          z-index: -2;
      }

      .heading {
          position: relative;

          h1 {
              font-size: 5rem;
              margin-bottom: 1rem;
          }
          img {
              position: absolute;
              top: 60%;
              width: 100%;
          }
      }
      
      h2 {
          font-weight: 500;
          font-size: 1.75rem;
          letter-spacing: 1px;
          margin-block: 1.5rem;
      }
  }
</style>